{% extends 'base.html.twig' %}

{% block title %}Blob index{% endblock %}

{% block body %}
    <h1>Blob index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blob in blobs %}
            <tr>
                <td>{{ blob.id }}</td>
                <td>{{ blob.name }}</td>
                <td>{{ blob.age }}</td>
                <td>
                    <a href="{{ path('app_blob_show', {'id': blob.id}) }}">show</a>
                    <a href="{{ path('app_blob_edit', {'id': blob.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blob_new') }}">Create new</a>
{% endblock %}
